{
  "manifest_version": 3,
  "name": "User Agent Manager",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "background": {
    "service_worker": "src/background-script/background.ts"
  },
  "content_scripts": [
    {
      "js": ["src/content-script/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
